<!DOCTYPE html>
<html lang="zh-cmn-Hans">
<head>
  <meta charset="UTF-8">
  <title>{{siteTitle}}</title>
  <meta name="description" content="{{siteDesc}}">
  <meta name="keywords" content="{{siteTags}}">
  <meta name="viewport" content="initial-scale=1.0;user-scale=no">
  <meta name="robots" content="index,follow">
  {{#if siteIcon}}
    <link rel="shortcut icon" type="image/png" href="./img/fav.png">
  {{/if}}
  <link rel="stylesheet" href="//cdn.staticfile.org/twitter-bootstrap/4.0.0-alpha.5/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/screen.css">
</head>
<body>
  {{> header}}
  <div id="gallery" class="container">
    <div id="home-gallery" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        {{#each articles-top}}
        <li data-target="#home-gallery" data-slide="{{@key}}" class="active"></li>
        {{/each}}
      </ol>
      <div class="carousel-inner" role="listbox">
        {{#each articles-top}}
        <div class="carousel-item active" style="background-image: {{thumbnail}}">
          <h2>{{title}}</h2>
          <p class="lead">{{description}}</p>
          <a href="{{url}}.html">View Gallery</a>
        </div>
        {{/each}}
      </div>
      <a class="left carousel-control" href="#home-gallery" role="button" data-slide="prev">
        <span class="fa fa-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#home-gallery" role="button" data-slide="next">
        <span class="fa fa-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  {{> footer}}
</body>
</html>