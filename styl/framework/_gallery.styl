#home-gallery
  height 400px

  .carousel-inner,
  .carousel-item
    height 100%

  .carousel-item
    background-position center center
    background-size cover
    justify-content center
    align-items center
    flex-direction column

    h2
      font-size 2.5em
      line-height 1.5em

    .view
      border 2px solid white
      border-radius 1em
      background-color rgba(255, 255, 255, .4)
      display inline-block
      line-height 2em
      padding 0 1em

  .carousel-indicators
    bottom -12px
    margin-bottom 0
    left 50%
    width 30%
    margin-left -15%
    background-color black
    border-radius 16px 16px 0 0

  @media (min-width 992px)
    &
      height 500px

  @media (min-width 1200px)
    &
      height: 600px