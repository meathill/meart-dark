<nav aria-label="Page navigation" class="d-flex justify-content-md-end">
  <ul class="pagination">
    <li class="page-item {{#unless hasPrevious}}disabled{{/unless}}">
      <a class="page-link" href="article{{previous}}.html" aria-label="Previous">
        <span aria-hidden="true"><i class="fa fa-angle-double-left"></i></span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    {{#each pages}}
    <li class="page-item {{#if @index .}}active{{/if}}"><a class="page-link" href="archive{{#unless @first}}-{{.}}{{/unless}}.html">{{.}}</a></li>
    {{/each}}
    <li class="page-item {{#unless next}}disabled{{/unless}}">
      <a class="page-link" href="article-{{next}}.html" aria-label="Next">
        <span aria-hidden="true"><i class="fa fa-angle-double-right"></i></span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>